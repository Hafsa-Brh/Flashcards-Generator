# AI Flashcards Generator Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# LM Studio Configuration
# =============================================================================

# LM Studio server URL (change IP to match your server)
FLASHCARDS_LM_STUDIO__BASE_URL=http://192.168.1.2:1234

# Specific model to use (leave empty for auto-selection)
FLASHCARDS_LM_STUDIO__MODEL_NAME=qwen3-4b-instruct-2507@q4_k_m

# AI generation parameters
FLASHCARDS_LM_STUDIO__TEMPERATURE=0.2
FLASHCARDS_LM_STUDIO__MAX_TOKENS=512
FLASHCARDS_LM_STUDIO__TOP_P=0.9
FLASHCARDS_LM_STUDIO__TIMEOUT=60
FLASHCARDS_LM_STUDIO__MAX_RETRIES=3

# =============================================================================
# Text Processing Configuration  
# =============================================================================

# Chunk size in words (adjust based on your content)
FLASHCARDS_TEXT_PROCESSING__MAX_CHUNK_SIZE=200
FLASHCARDS_TEXT_PROCESSING__CHUNK_OVERLAP=50
FLASHCARDS_TEXT_PROCESSING__MIN_CHUNK_SIZE=20

# Text cleaning options
FLASHCARDS_TEXT_PROCESSING__REMOVE_URLS=true
FLASHCARDS_TEXT_PROCESSING__REMOVE_EMAIL=true
FLASHCARDS_TEXT_PROCESSING__NORMALIZE_WHITESPACE=true

# =============================================================================
# Flashcard Generation Configuration
# =============================================================================

# How many cards to generate per text chunk
FLASHCARDS_CARD_GENERATION__MAX_CARDS_PER_CHUNK=8
FLASHCARDS_CARD_GENERATION__MIN_CARDS_PER_CHUNK=2

# Card generation preferences
FLASHCARDS_CARD_GENERATION__PREFER_QUESTIONS=true
FLASHCARDS_CARD_GENERATION__INCLUDE_DEFINITIONS=true
FLASHCARDS_CARD_GENERATION__INCLUDE_COMPARISONS=true
FLASHCARDS_CARD_GENERATION__AUTO_TAG=true

# =============================================================================
# Export Configuration
# =============================================================================

# Output directory for generated flashcards
FLASHCARDS_EXPORT__OUTPUT_DIR=data/output

# Filename template for output files
FLASHCARDS_EXPORT__FILENAME_TEMPLATE="{deck_name}_{timestamp}"

# Export format options
FLASHCARDS_EXPORT__INCLUDE_METADATA=true
FLASHCARDS_EXPORT__PRETTY_JSON=true
FLASHCARDS_EXPORT__BACKUP_EXISTING=true

# =============================================================================
# Application Settings
# =============================================================================

# Application behavior
FLASHCARDS_DEBUG=false
FLASHCARDS_VERBOSE=false

# Data directories
FLASHCARDS_INPUT_DIR=data/input
FLASHCARDS_SAMPLES_DIR=data/samples